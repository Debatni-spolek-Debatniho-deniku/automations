@model DSDD.Automations.Payments.Views.Payer.PaymentViewModel

<tr class="@(Model.Type == DSDD.Automations.Payments.Views.Payer.PaymentType.BANK_REMOVED ? "row-removed" :null)">
    <td>@Html.DisplayFor(m => m.Type)</td>
    <td>@(Model.CounterpartyAccountNumber ?? "-")</td>
    <td>@(Model.ConstantSymbol?.ToString() ?? "-")</td>
    <td>@Model.AmountCzk CZK</td>
    <td>@Model.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
    <td>@Model.Description</td>
    <td style="width: 100px">
        @{
            if (Model.Type == DSDD.Automations.Payments.Views.Payer.PaymentType.BANK_REMOVED)
            {
                <form class="btn btn-outline-success" action="/payers/@Model.VariableSymbol/payments/@Model.Reference/restore" method="POST" onclick="this.submit()" title="Obnovit">
                    <i class="bi bi-box-arrow-up"></i>
                </form>
            }
            else
            {
                <div class="btn-group" role="group">
                    <a href="/payers/@Model.VariableSymbol/payments/@Model.Reference" class="btn btn-outline-success" title="Upravit">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <form class="btn btn-outline-danger" action="/payers/@Model.VariableSymbol/payments/@Model.Reference/remove" method="POST" onclick="this.submit()" title="Odstranit">
                        <i class="bi bi-trash"></i>
                    </form>
                </div>
            }
        }
    </td>
</tr>