@inherits DSDD.Automations.Payments.Views.ShimTemplatePage<DSDD.Automations.Payments.Views.ManualPayment.ManualPaymentFormViewModel>

<form class="card" method="post">
    <div class="card-body">
        <div class="row">
            <div class="col-4 form-group">
                <label for="reference">Reference</label>
                <input type="text" class="form-control" id="reference" name="reference" value="@Model.Reference">
            </div>
        </div>
        <div class="row">
            <div class="col-4 form-group">
                <label for="amount-value">Částka</label>
                <input type="number" class="form-control" id="amount-value" name="amount-value" value="@Model.AmountCzk">
                <span>CZK</span>
            </div>
            <div class="col-4 form-group">
                <label for="date-time">Datum a čas</label>
                <input type="datetime-local" class="form-control" id="date-time" name="date-time" value="@Model.DateTime?.ToString("yyyy-MM-ddTHH:mm:ss.fffZ")">
            </div>
        </div>
        <div class="row">
            <div class="col-4 form-group">
                <label for="constant-symbol">Konstantní symbol</label>
                <input type="number" class="form-control" id="constant-symbol" name="constant-symbol" min="0" step="0" value="@Model.ConstantSymbol">
            </div>
            <div class="col-8 form-group">
                <label for="description">Popis platby</label>
                <input type="text" class="form-control" id="description" name="description" value="@Model.Description">
            </div>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-end">
        <button type="submit" class="btn btn-success ml-auto">Uložit</button>
    </div>
</form>